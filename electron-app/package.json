{
  "name": "underlator",
  "productName": "underlator",
  "version": "1.0.0",
  "description": "ML translator",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:8000 && npm run start:electron\"",
    "start:react": "cd ../react-app && cross-env BROWSER=none npm run start",
    "start:electron": "cross-env NODE_ENV=development electron-forge start",
    "package": "electron-forge package",
    "build": "npm run build:ts && webpack --config webpack.config.js",
    "build:ts": "tsc",
    "make": "npm run build && electron-builder --dir",
    "lint": "eslint . --ext .js, .ts",
    "lint:fix": "eslint --fix . --ext .js, .ts",
    "format": "prettier . --write",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.3.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.0",
    "@electron-forge/plugin-fuses": "^7.3.0",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.3.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "29.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.32.0",
    "eslint-plugin-n": "^17.21.3",
    "prettier": "^3.4.2",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "keywords": [],
  "author": {
    "name": "Sengeer",
    "email": "sengeer@mail.ru"
  },
  "license": "MIT",
  "dependencies": {
    "@huggingface/transformers": "^3.7.2",
    "electron-squirrel-startup": "^1.0.0"
  },
  "build": {
    "asar": false,
    "appId": "com.example.underlator",
    "productName": "Underlator",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "icons/icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icons/icon.icns",
      "target": "dmg"
    }
  }
}
