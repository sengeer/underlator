{
  "name": "Underlator",
  "productName": "Underlator",
  "version": "1.0.0",
  "description": "Confidential translator and interactive assistant for document analysis using local LLMs â€” as a desktop application.",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "npm run build:dev && concurrently \"npm run start:react\" \"wait-on http://localhost:8000 && npm run start:electron\"",
    "start:react": "cd ../react-app && cross-env BROWSER=none npm run start",
    "start:electron": "cross-env NODE_ENV=development electron-forge start",
    "package": "electron-forge package",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack.config.ts",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack.config.ts",
    "make": "npm run build:prod && electron-builder --dir",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint --fix . --ext .js,.ts",
    "prettier": "prettier . --write",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "docs": "npx typedoc"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.3.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.0",
    "@electron-forge/plugin-fuses": "^7.3.0",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vercel/webpack-asset-relocator-loader": "^1.10.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "29.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.32.0",
    "eslint-plugin-n": "^17.21.3",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "jiti": "^2.6.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.4.2",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "keywords": [],
  "author": {
    "name": "Sengeer",
    "email": "sengeer@mail.ru"
  },
  "license": "MIT",
  "dependencies": {
    "electron-ollama": "^0.1.25",
    "electron-squirrel-startup": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "asar": true,
    "appId": "com.example.underlator",
    "productName": "Underlator",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "icons/icon.ico"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "icons/icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icons/icon.icns",
      "target": "dmg"
    }
  }
}
