{
  "name": "underlator",
  "productName": "Underlator",
  "version": "0.1.0-beta",
  "description": "Backend application for working with local LLMs",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "npm run build:dev && concurrently \"npm run start:react\" \"wait-on http://localhost:8000 && npm run start:electron\"",
    "start:react": "cd ../react-app && cross-env BROWSER=none npm run start",
    "start:electron": "cross-env NODE_ENV=development electron-forge start",
    "react:build": "cd ../react-app && npm run react:build",
    "package": "electron-forge package",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack.config.ts",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack.config.ts",
    "copy-ollama-binaries": "node ./scripts/copy-ollama-binaries.mjs",
    "make:windows": "npm run react:build && npm run build:prod && electron-builder --win",
    "make:macos": "npm run react:build && npm run build:prod && electron-builder --mac",
    "make:linux": "npm run react:build && npm run build:prod && electron-builder --linux",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint --fix . --ext .js,.ts",
    "prettier": "prettier . --write",
    "lint-staged": "lint-staged",
    "type:check": "tsc --noEmit --pretty",
    "docs": "npx typedoc"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.3.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.0",
    "@electron-forge/plugin-fuses": "^7.3.0",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.3.0",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vercel/webpack-asset-relocator-loader": "^1.10.0",
    "concurrently": "^9.1.2",
    "cpy": "^11.1.0",
    "cross-env": "^7.0.3",
    "electron": "^38.7.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.32.0",
    "eslint-plugin-n": "^17.21.3",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "jiti": "^2.6.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.1.2",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "keywords": [
    "electron",
    "desktop-app",
    "translation",
    "pdf",
    "llm",
    "ollama",
    "rag",
    "vector-store",
    "privacy",
    "local-ai",
    "confidential"
  ],
  "author": {
    "name": "Sengeer",
    "email": "fox8911@gmail.com"
  },
  "license": "BSD-3-Clause + Branding",
  "repository": {
    "type": "git",
    "url": "https://github.com/sengeer/underlator.git"
  },
  "funding": {
    "type": "individual",
    "url": "https://boosty.to/underlator/donate"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "electron-ollama": "^0.1.25",
    "electron-squirrel-startup": "^1.0.0",
    "pdf-parse": "^1.1.1",
    "systeminformation": "^5.27.11"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "asar": true,
    "appId": "com.example.underlator",
    "productName": "Underlator",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "win": {
      "target": [
        "zip",
        "dir"
      ],
      "icon": "icons/icon.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icons/icon.icns",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-macos-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "icons/icon.png",
      "executableName": "Underlator",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "desktop": {
        "Name": "Underlator",
        "Comment": "Desktop application for working with local LLMs",
        "Categories": "Utility;Office;",
        "StartupWMClass": "Underlator"
      }
    }
  }
}
